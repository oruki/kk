<%= title_bar("bok", "児童ケース記録（新規登録）")%>
<%= fn_bar2 %>

<TABLE CLASS="part">
  <%= table_col(32) %>	  
<% form_for(@case_rec) do |f| %>
<%= f.error_messages %>
  <tr>
    <th colspan=12>児　童</th>
    <td colspan=20>
      <%= f.select(:boy_id, Boy.find(:all).map{|i|[i.name,i.id]}, {:include_blank => true} ) %>
    </td>
  </tr>
  <tr>
    <th colspan=12>備　考</th>
    <td colspan=20><%= f.text_field :misc %></td>
  </tr>
  <tr>  
    <th colspan=12>登録／更新</th>
    <td colspan=20><%= f.submit "登録／更新" %></td>
  </tr>
<% end %>
</TABLE>
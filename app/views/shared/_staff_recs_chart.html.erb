<TABLE class="part">
  <tr>
    <% 13.times do |k| %>
      <td></td>
    <% end %> 
  </tr>
  <tr>
    <th colspan=1>時間</td>
    <th colspan=3>00-15</td>
    <th colspan=3>15-30</td>    
    <th colspan=3>30-45</td>
    <th colspan=3>45-00</td>
  </tr>
<% for i in 0..11 %>
  <tr>
    <th colspan=1> <%= %w{07 08 09 10 11 12 13 14 15 16 17 18}[i] %>時</th>
    <% for j in 0..3 %>
      <td colspan=3>
        <% if @s[i][j].blank? %>
          <span style="font-size:10px; color:#ccc">
            （なし）
          </span>
        <% else %>
          <span style="font-size:10px">
           <% @s[i][j].size.times do |l| %>
             <%= "#{@s[i][j][l].attend.staff.name}(#{@s[i][j][l].in_out})" %><br>
           <% end %>
          </span>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
</TABLE>
<%= title_bar("rep", "児童支援計画（新規登録）") %>  
<%= fn_bar2 %>

<%= error_messages_for :shien_keikaku %>

<% form_for(@shien_keikaku) do |f| %>
<TABLE CLASS="part">
　　<%= table_col(32) %>
  <tr>
    <th colspan=10>作成日</td>
    <td colspan=22><%= f.date_select(:date,{ :include_blank => true, 
                                  :use_month_numbers => true,
                                  :start_year => Date.today.years_ago(3).year, 
                                  :end_year   => Date.today.year})  %>
    </td>                          
  </tr>    
  <tr>
    <th colspan=10>作成番号</td>
    <td colspan=22><%= f.text_field :sakutei_bango, :rows => 2, :cols => 56 %></td>
  </tr>  
  <tr>
    <th colspan=10>児童ID</td>
    <td colspan=22>
      <% bb = Boy.find(:all, :order => "id").map {|u| [u.name, u.id] } %>
      <%= f.select(:boy_id, bb, {:include_blank => true}) %>
      <!-- すでにShienKeikaku.find(:all, :conditions =>)件の支援計画票があります -->
    </td>
  </tr>
    <tr>
    <th colspan=10>ｽﾀｯﾌID</td>
    <td colspan=22>
      <% ss = Staff.find(:all, :order => "id").map {|u| [u.name, u.id] } %>
      <%= f.select(:staff_id, ss, {:include_blank => true}) %>
    </td>
  </tr>
  <tr>
    <th colspan=10>主たる問題</td>
    <td colspan=22><%= f.text_area :shutaru_mondai, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>本人の意向</b></td>
    <td colspan=22><%= f.text_area :honnin_ikou, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>保護者の意向</th>
    <td colspan=22><%= f.text_area :hogosha_ikou, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>学校等の意見</th>
    <td colspan=22><%= f.text_area :school_iken, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>児童相談所協議内容</th>
    <td colspan=22><%= f.text_area :jidou_sodan_kyogi, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>支援方針</th>
    <td colspan=22><%= f.text_area :shien_hoshin, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>長期目標／子ども本人</th>
    <td colspan=22><%= f.text_area :choki_kodomo, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>長期目標／家庭(養育者・家族)</th>
    <td colspan=22><%= f.text_area :choki_katei, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>長期目標／地域(保育所・学校等)</th>
    <td colspan=22><%= f.text_area :choki_chiiki, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>長期目標／総合</th>
    <td colspan=22><%= f.text_area :choki_sogo, :rows => 2, :cols => 56 %></td>
  </tr>
  <tr>
    <th colspan=10>登録/更新</th>
    <td colspan=22><%= f.submit "登録/更新" %></td>
  </tr>

</table>
<% end %>
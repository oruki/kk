<%= title_bar("mst", "児童教育機関関係（新規登録）")%>
<%= fn_bar2 %>

<TABLE CLASS="part"> 
<%= error_messages_for :jido_edu_rel %>
  <%= table_col(32) %>
<% form_for(@jido_edu_rel) do |f| %>
  <tr>
    <th colspan=12>児 童</th>
    <td colspan=20><%= f.select(:boy_id, Boy.find(:all).map{|i|[i.name,i.id]}, {:include_blank => true} ) %></td>
  </tr>

  <tr>
    <th colspan=12>教育機関</th>
    <td colspan=20><%= f.select(:edu_inst_id, EduInst.find(:all).map{|i|[i.name,i.id]}, {:include_blank => true} ) %></td>
  </tr>
  <tr>
    <th colspan=12>登録/更新</th>
    <td colspan=20><%= f.submit "登録/更新" %>
  </tr>
<% end %>
</TABLE> 
<div ID="new_staff_rec_form" style="vertical-align: middle; text-align:right">
  <%= "#{image_tag ("action_add.gif", :border=>0)}をｸﾘｯｸして勤務記録を作成します" %>
</div>
      
<TABLE CLASS="part">
  <tr>
  <% 32.times do %>
    <td></td>
  <% end %>
  </tr>
  <tr>
    <th colspan=5>時間</th>
    <th colspan=6>指導員</th>
    <th colspan=5>外出</th>
    <th colspan=6>用件</th>
    <th colspan=10>
      <span style="float:right;">
      <%= link_to_remote image_tag ("action_add.gif", :border=>0),
          :url => {:action => "new_staff_rec"} %>  <!-- list for hours of time_start/time_end from attend_controller -->
      </span>
      内容
    </th>
  </tr>

<% for staff_rec in diary %>
  <tr>
    <td colspan=5>
      <%=h "#{staff_rec.hours}:#{staff_rec.minutes}" %>
    </td>
    <td colspan=6><%=h staff_rec.attend.staff.name %></td>
    <td colspan=5><%=h staff_rec.in_out %></td>
    <td colspan=6><%=h staff_rec.yoken %></td>
    <td colspan=9><%=h staff_rec.naiyo %></td>
    <td colspan=1><%= go_edit(staff_rec,"staff_recs") %></td>
  </tr>
<% end %>
</table>
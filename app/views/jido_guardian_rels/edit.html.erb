<TABLE ID="mst" CLASS="title">
  <tr>
    <td>児童保護者関係（編集）</td>
  </tr>  
</TABLE>

<TABLE CLASS="part"> 
<%= error_messages_for :jido_guardian_rel %>
  <tr>
    <td colspan=32 style="text-align:right; ">
      <span style="float:left;">
        <%= link_to_back %>
      </span>  
      <%= link_to_mypage %> &nbsp;
      <%= go_list %>
    </td>
  </tr>
  <%= table_col(32) %>
<% form_for(@jido_guardian_rel) do |f| %>
  <tr>
    <th colspan=12>児 童</th>
    <td colspan=20><%= f.select(:boy_id, Boy.find(:all).map{|i|[i.name,i.id]}, {:include_blank => true} ) %></td>
  </tr>
  <tr>
    <th colspan=12>保護者</th>
    <td colspan=20><%= f.select(:guardian_id, Guardian.find(:all).map{|i|[i.name,i.id]}, {:include_blank => true} ) %></td>
  </tr>
  <tr>
    <th colspan=12>関係</th>
    <td colspan=20><%= f.text_field :relation %></td>
  </tr>
  <tr>
    <th colspan=12>続柄</th>
    <td colspan=20><%= f.text_field :zokugara %></td>
  </tr>
  <tr>
    <th colspan=12>期限</th>
    <td colspan=20><%= f.text_field :date_expired %></td>
  </tr>  
  <tr>
    <th colspan=12>登録/更新</th>
    <td colspan=20><%= f.submit "登録/更新" %>
  </tr>
<% end %>
</TABLE> 
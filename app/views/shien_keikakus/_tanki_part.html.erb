<TABLE CLASS="part">
<tr>
  <td colspan="32">
    <div style = "float:right; vertical-align:bottom; padding:5px">
      <%= link_to_function image_tag("reply.gif", :border=>0),
            visual_effect(:appear, target) %> 
    </div>    
    【長期目標】<%=  eval '@shien_keikaku' + '.' + target %>
  </td>
</tr>
<%= table_col(32) %>

<!-- 支援計画各入力欄の「編集」リンクから呼ばれて当該編集入力パーツを表示モードに変える
-->  
  <tr style="display:none;">
    <td colspan="32">
      <% form_for(@shien_keikaku) do |f| %>   
    </td>
  </tr>
  <tr ID = <%= target %> style="display:none;">
    <td colspan=27>
      <%= f.text_area target, :rows => 2, :cols => 56 %>
    </td>
    <td colspan=5>
      <%= f.submit "登録/更新" %><br>
      <%= link_to_function '中止',visual_effect(:fade, target) %>
    </td>
  </tr>  
  <tr ID="submit" style="display:none;">
    <td><% end %></td>
  </tr>
<!--以上　隠し入力フィールド 
-->
<tr>
  <td colspan="32">
    <%= render(:partial => "shared/tanki_shien_mokuhyos.html.erb", 
               :object  =>  TankiShienMokuhyo.category(cat).shien_keikaku_id (@shien_keikaku),
               :locals  =>  { :cat => cat , :label => label, :choki => choki}) %>
  </td>
</tr>
</TABLE>
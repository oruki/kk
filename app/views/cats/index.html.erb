
<table CLASS="part">
  <%= table_col(32) %>	
  <tr>
    <th colspan=6>Title</th>
    <th colspan=7>Subtitle</th>
    <th colspan=10>Value</th>
  </tr>

<% @cats.each do |cat| %>
  <tr>
    <td colspan=6><%=h cat.title %></td>
    <td colspan=7><%=h cat.subtitle %></td>
    <td colspan=10><%=h cat.value %></td>
    <td colspan=3>
    	<%= link_to 'Show', cat_path(cat) %>	
	</td>
    <td colspan=3>
    	<%= link_to 'Edit', edit_cat_path(cat) %>
	</td>
    <td colspan=3>
    	<%= link_to 'Destroy', cat_path(cat), :confirm => 'Are you sure?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cat', :controller => "cats", :action => "nes" %>


